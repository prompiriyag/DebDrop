{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs@18.x"
    },
    "api/**/*.cjs": {
      "runtime": "nodejs@18.x"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 17 * * *"
    }
  ]
}